{
  "name": "@astroall/ziwei-core",
  "version": "1.0.0",
  "description": "紫微斗数核心算法库 - ZiWei Dou Shu Core Algorithm Library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.d.mts",
      "require": "./dist/types/*.d.ts"
    },
    "./api/*": {
      "types": "./dist/api/*.d.ts",
      "import": "./dist/api/*.js",
      "require": "./dist/api/*.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "build:legacy": "rimraf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "clean": "rimraf dist coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "generate:examples": "npm run build && node dist/examples/generate-examples.js"
  },
  "keywords": [
    "ziwei",
    "ziwei-doushu",
    "astrology",
    "chinese-astrology",
    "purple-star",
    "bazi",
    "fortune-telling",
    "命理",
    "紫微斗数",
    "八字"
  ],
  "author": "AstroAll",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AstroAll/astro-mobile.git",
    "directory": "packages/@astroall/ziwei-core"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "tyme4ts": "^1.3.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.ts", "**/*.test.ts"],
    "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**/*",
      "!src/examples/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "html", "lcov", "json"],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000,
    "verbose": true,
    "collectCoverage": false
  }
}
